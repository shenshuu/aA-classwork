<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <p>"<%= current_user.username %>"</p>
      <a href="<% session.destroy %>">Log Out</a>
    <% else %>
      <a href="<% new_session_url %>">Log In</a>
    <%end%>

    <%= yield %>
  </body>
</html>
